    "express": "4.18.1",
    "express-bearer-token": "^2.4.0",
    "graphql": "^16.8.1",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-tools": "^9.0.1",
    "graphql-yoga": "^5.3.0",
